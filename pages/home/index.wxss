.page {
  padding: 32rpx;
  box-sizing: border-box;
}
.__search {
  width: 100%;
  height: 100rpx;
  border: 4rpx solid black;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.van-cell {
  padding: 0 !important;
  height: 100%;
  box-sizing: border-box;
}

.van-field__body {
  padding-left: 32rpx;
  height: 100%;
  font-size: 32rpx;
}

.van-field__button {
  margin-right: 32rpx;
}

.van-field__button {
  color: var(--purple);
}

.__list {
  margin-top: 18rpx;
}

.__item {
  padding: 18rpx 0;
  font-size: 30rpx;
}

.__item text {
  margin-right: 10rpx;
  padding: 5rpx 10rpx;
  background-color: #F5F5F5;
  color: gray;
  font-size: 20rpx;
  border-radius: 15rpx;
}

.__card {
  width: 100%;
  margin: 32rpx 0 ;
  padding: 32rpx;
  min-height: 100rpx;
  border: 4rpx solid var(--purple);
  border-radius: 20rpx;
  box-sizing: border-box;
}

.__phonetic > view{
  margin-top: 20rpx;
  margin-right: 20rpx;
  padding: 8rpx 15rpx;
  border-radius: 30rpx;
  background-color: #F5F5F5;
  font-size: 22rpx;
  color: #4D4D4D;
}

.__explains {
  margin-top: 10rpx;
  color: #4D4D4D;
  font-size: 24rpx;
}

.__item--ex {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.__item--ex:nth-last-child(1) {
  border: 0 solid;
}

.__item--ex text:nth-of-type(1) {
  display: inline-block;
  margin-right: 20rpx;
  flex: 0 0 50rpx;
}

.__item--ex text:nth-of-type(2) {
  flex: 1;
  display: inline-block;
}

.__tips {
  margin-top: 20rpx;
  font-size: 20rpx;
  color: #999999;
}

.__lenovo {
  position: relative;
  padding: 20rpx;
  margin-top: 32rpx;
  width: 100%;
  min-height: 250rpx;
  font-size: 28rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.__btn {
  position: absolute;
  left: 38%;
  top: 38%;
  padding: 10rpx 20rpx;
  height: 44rpx;
  color: var(--purple);
  font-size: 30rpx;
  border: 1rpx solid #CCCCCC;
  background-color: white;
  border-radius: 30rpx;
}

.__textarea {
  width: 100%;
  height: 200rpx;
}

.__textarea .van-field__control {
  height: 100% !important;
  font-size: 28rpx !important;
}

.__btn-add {
  display: inline-block;
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  background-color: var(--purple);
  font-size: 24rpx;
  color: white;
  border-radius: 20rpx;
}

.__btn-edit {
  display: inline-block;
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  background-color: #66CC99;
  font-size: 24rpx;
  color: white;
  border-radius: 20rpx;
}

