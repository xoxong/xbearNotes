
.__search {
  width: 100%;
  height: 100rpx;
  border: 4rpx solid black;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.van-field__body {
  padding-left: 32rpx;
}

.van-field__button {
  margin-right: 32rpx;
  color: var(--purple);
}

.__list {
  margin-top: 18rpx;
}

.__item {
  padding: 18rpx 0;
  font-size: 30rpx;
}

.__item text {
  margin-right: 10rpx;
  padding: 5rpx 10rpx;
  background-color: #F5F5F5;
  color: gray;
  font-size: 20rpx;
  border-radius: 15rpx;
}
